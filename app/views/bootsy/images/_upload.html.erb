<!-- The template to display files available for upload -->
<script id="bootsy-template-upload" type="text/x-tmpl">
  {% for (var i=0, file; file=o.files[i]; i++) { %}
  <tr class="template-upload fade">
    <td class="preview"><i class="{%=file.icon_class || 'fa fa-file'%}"></i></td>
    <td class="name"><span>{%=file.name%}</span></td>
    {% if (file.error) { %}
    <td class="error">
      <span class="label label-danger">{%=locale.fileupload.error%}</span> {%=locale.fileupload.errors[file.error] || file.error%}
    </td>
    {% } else if (o.files.valid && !i) { %}
    {% } else { %}
    {% } %}
    <td class="progress-bar-cell"><div class="progress-bar-holder"><div class="progress-bar" style="width:0%;"></div></div></td>
  </tr>
  {% } %}
</script>